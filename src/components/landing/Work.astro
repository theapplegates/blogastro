---
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Icons
import Link from "@/components/fundations/icons/Link.astro";

const data = [
  {
    period: "2023–2025",
    title: "Swiss Modernism Showcase",
    description: `Curated and designed an exhibition highlighting the evolution of Swiss modernism in graphic design, showcasing iconic works and their influence on contemporary design.`,
    location: "Zurich, Switzerland",
    link: "#_",
  },
  {
    period: "2020–2023",
    title: "Helvetica Redefined",
    description: `Redesigned the Helvetica type specimen to include modern variations and applications. The work explored the typeface's versatility and its legacy in Swiss design.`,
    location: "Basel, Switzerland",
    link: "#_",
  },
  {
    period: "2017–2020",
    title: "Swiss Design Principles",
    description: `Developed educational materials and workshops on the core principles of Swiss design, focusing on grid systems, typography, and minimalist aesthetics.`,
    location: "Geneva, Switzerland",
    link: "#_",
  },
];
---

<section>
  <Wrapper variant="standard">
    <div
      class="grid grid-cols-1 gap-4 md:grid-cols-3 border-b py-8 border-base-200"
    >
      <Text tag="h3" variant="textSM" class="text-base-900"> Work </Text>

      <div class="flex flex-col gap-12 lg:col-span-2">
        {
          data.map((work, index) => (
            <article class="group relative grid grid-cols-1 gap-4 lg:grid-cols-3 lg:items-start ">
              <div class="lg:col-span-2">
                <Text
                  tag="h3"
                  variant="textSM"
                  class=" font-medium tracking-tight text-base-900   "
                >
                  <div class="absolute -inset-x-1 -inset-y-4 z-0 scale-95 bg-base-50   opacity-0 transition group-hover:scale-100 group-hover:opacity-100 -inset-x-4 rounded-2xl " />
                  <a href={work.link}>
                    <>
                      <span class="absolute -inset-x-4 -inset-y-6 z-20 sm:-inset-x-6 sm:rounded-2xl" />
                      <span class="relative z-10"> {work.title}</span>
                    </>
                  </a>
                </Text>
                <Text
                  tag="p"
                  variant="textXS"
                  class="relative z-10 mt-1 text-base-600    "
                >
                  {work.description}
                </Text>
              </div>
              <Text
                tag="p"
                variant="textXS"
                class="relative z-10   flex items-center text-sm text-base-400  lg:ml-auto"
              >
                <time datetime={work.period}> {work.period}</time>
              </Text>
            </article>
          ))
        }
      </div>
    </div>
  </Wrapper>
</section>
